@model SachdevaCo.Core.Model.ViewModels.AboutPageViewModel

@{
    ViewBag.Title = "About Us";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<style>
    .hero {
        background: linear-gradient(135deg, #0C1533, #4f46e5);
        color: white;
    }

    .hero .btn-secondary {
        background-color: #fff;
        color: #0C1533;
        font-weight: 600;
    }

    .hero .btn-secondary:hover {
        background-color: #f1f1f1;
        color: #0C1533;
    }

    .team-card {
        transition: all 0.3s ease;
    }

    .team-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .team-card img {
        border: 4px solid #fff;
        object-fit: cover;
        width: 150px;
        height: 150px;
    }
</style>

<section class="hero text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            Welcome to @Model.About.Title
        </h1>
        <p class="lead mb-4">@Model.About.FrontDescriptions</p>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="#team" class="btn btn-secondary text-black btn-lg d-flex align-items-center gap-2">
                <i class="bi bi-people"></i> Meet Our Team
            </a>
            <a href="#about" class="btn btn-outline-light btn-lg fw-semibold">Learn More</a>
        </div>
    </div>
</section>
<section id="about" class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">About Us</h2>
        <p class="lead text-muted mx-auto mb-5" style="max-width: 700px;">
            @Model.About.Description
           
        </p>

        <div class="row g-4">
            <div class="col-md-4">
                <div>
                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:64px; height:64px;">
                        <i class="bi bi-bullseye text-primary fs-2"></i>
                    </div>
                    <h5 class="fw-bold">Our Mission</h5>
                    <p class="text-muted small">@Model.About.Mission</p>
                </div>
            </div>
            <div class="col-md-4">
                <div>
                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:64px; height:64px;">
                        <i class="bi bi-people text-primary fs-2"></i>
                    </div>
                    <h5 class="fw-bold">Our Values</h5>
                    <p class="text-muted small">@Model.About.Value</p>
                </div>
            </div>
            <div class="col-md-4">
                <div>
                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:64px; height:64px;">
                        <i class="bi bi-award text-primary fs-2"></i>
                    </div>
                    <h5 class="fw-bold">Our Vision</h5>
                    <p class="text-muted small">@Model.About.Vision</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="team" class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Meet Our Team</h2>
        <p class="lead text-muted mx-auto mb-5" style="max-width: 700px;">
            Our diverse team of experts brings together years of experience,
            creativity, and technical expertise to deliver outstanding results.
        </p>

        <div class="row g-4">
            @foreach (var member in Model.TeamMembers)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 text-center team-card p-3">
                        <div class="mb-3">
                            <img src="@member.ImageUrl" alt="@member.Name" class="rounded-circle shadow-sm mx-auto">
                        </div>
                        <h5 class="fw-bold mb-1">@member.Name</h5>
                        <p class="text-primary small fw-semibold mb-2 text-uppercase">@member.Position</p>
                        <p class="mb-1">
                            <a href="mailto:@member.Email" class="text-decoration-none text-primary">
                                <i class="bi bi-envelope"></i> @member.Email
                            </a>
                        </p>
                        <p class="text-muted small mb-2">
                            <i class="bi bi-telephone"></i> @member.Phone
                        </p>
                        <p class="small text-muted">@member.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="hero text-center py-5">
    <div class="container">
        <h2 class="fw-bold mb-3">Ready to Work Together?</h2>
        <p class="lead mb-4">Let's discuss how our team can help bring your vision to life.</p>
        <a href="/Contact/index" class="btn btn-secondary btn-lg text-black">Get In Touch</a>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>