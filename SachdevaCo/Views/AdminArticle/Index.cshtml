@model List<SachdevaCo.Core.Model.ViewModels.ArticleViewModel>

@{
    ViewData["Title"] = "Manage Articles";
    Layout = "_AdminLayout";

}

<div class="container py-4">

<h2>Manage Articles</h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" name="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="File">Upload PDF</label>
        <input type="file" name="File" class="form-control" accept=".pdf" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Article</button>
</form>

<hr />

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var article in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@article.Title</td>
                    <td>
                        <a href="@article.FilePath" target="_blank">View PDF</a>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@article.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>

                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No articles found.</td>
            </tr>
        }
    </tbody>
</table>
</div>