@model SachdevaCo.Core.Model.ViewModels.LoginRegisterViewModel

@{
    Layout = "_LayoutLogin";
    bool showRegister = ViewBag.ShowRegister == true;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">
                        @(showRegister ? "Register" : "Login")
                    </h3>

                    @if (showRegister)
                    {
                        <form asp-action="Register" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Register.UserName"></label>
                                <input name="Register.UserName"  asp-for="Register.UserName" class="form-control" />
                                <span asp-validation-for="Register.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Register.Email"></label>
                                <input name="Register.Email"  asp-for="Register.Email" class="form-control" />
                                <span asp-validation-for="Register.Email" class="text-danger"></span>
                            </div>
                          
                            <div class="form-group mb-3">
                                <label asp-for="Register.Role"></label>
                                <input name="Register.Role"  asp-for="Register.Role" class="form-control" />
                                <span asp-validation-for="Register.Role" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Register.Password"></label>
                                <input name="Register.Password"  asp-for="Register.Password" class="form-control" type="password" />
                                <span asp-validation-for="Register.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Register.ConfirmPassword"></label>
                                <input name="Register.ConfirmPassword" asp-for="Register.ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="Register.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </form>
                        <div class="text-center mt-3">
                            <a asp-action="Index">Already have an account? Login</a>
                        </div>
                    }
                    else
                    {
                        <!-- ✅ Login Form -->
                        <form asp-action="Login" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Login.Email"></label>
                                <input asp-for="Login.Email" class="form-control" />
                                <span asp-validation-for="Login.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Login.Password"></label>
                                <input asp-for="Login.Password" class="form-control" type="password" />
                                <span asp-validation-for="Login.Password" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-success w-100">Login</button>
                        </form>
                        <div class="text-center mt-3">
                            <a asp-action="Register">Don't have an account? Register</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
