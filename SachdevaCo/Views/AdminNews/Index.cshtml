@model List<SachdevaCo.Core.Model.ViewModels.NewsViewModel>

@{
    ViewData["Title"] = "Manage News";
    Layout = "_AdminLayout";

}

<div class="container py-4">

<h2>Manage News </h2>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" name="Title" class="form-control" required />
    </div>
    <div class="form-group">
            <label for="Descriptions">Description</label>
            <input type="text" name="Descriptions" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Upload Image (JPG, JPEG, PNG)</label>
        <input type="file" name="ImageFile" id="newsImageFile" class="form-control"
                   accept=".jpg, .jpeg, .png" onchange="previewNewsImage(event)" />

        <small class="text-muted">Allowed formats: JPG, JPEG, PNG</small>
    </div>
    <div class="mt-3 text-center">
            <img id="NewsImgaePreview" src="" alt="Image Preview"
                class="img-thumbnail" style="display:none; max-width:150px; border-radius:50%;">
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <select id="ddlCategory" name="Category" class="form-control">
            <option value="">All Posts</option>
            <option value="TAX">TAX</option>
            <option value="Company Law">Company Law</option>
            <option value="GST">GST</option>
        </select>

    </div>
    <div class="form-group">
        <label for="File">Upload PDF</label>
        <input type="file" name="File" class="form-control" accept=".pdf" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add News</button>
</form>

<hr />

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>SNo.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Category</th>
            <th>Image</th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var news in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@news.Title</td>
                    <td>@news.Descriptions</td>
                    <td>@news.Category</td>
                        <td><img src="@news.ImageUrl" class="card-img-top" alt="@news.Title"></td>
                    <td>
                        <a href="@news.FilePath" target="_blank">View PDF</a>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@news.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No News found.</td>
            </tr>
        }
    </tbody>
</table>
</div>

@section Scripts {
<script>
     function previewNewsImage(event) {
        const file = event.target.files[0];
        if (file) {
            const validTypes = ["image/jpeg", "image/jpg", "image/png"];
            if (!validTypes.includes(file.type)) {
                alert("Please upload a valid image (JPG, JPEG, PNG).");
                event.target.value = "";
                return;
            }
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById("NewsImgaePreview");
                preview.src = e.target.result;
                preview.style.display = "block";
            };
            reader.readAsDataURL(file);
        }
      }
</script>
}
