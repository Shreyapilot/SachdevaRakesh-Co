@{
    ViewBag.Title = "Contact";
}

<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row align-items-start g-5">

            <!-- Contact Info -->
            <div class="col-lg-5">
                <p class="text-success fs-5 mb-2">How can we help you?</p>
                <h2 class="fw-bold mb-3">Contact Us</h2>
                <p class="text-muted mb-4">
                    We're here to help and answer any questions you might have. We look forward to hearing from you!
                </p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary"></i> 338, Somdutt chamber 2, 238, Somdatt Chambers - II, 9, Bhikaji Cama Place, Bhikaji Cama Place, Rama Krishna Puram, New Delhi, Delhi 110066, newdelhi, 110066</li>
                    <li class="mb-2"><i class="bi bi-telephone-fill text-primary"></i> +916667778888</li>
                    <li>
                        <i class="bi bi-envelope-fill text-primary"></i>
                        <a href="mailto:mail@sleeknote.com" class="text-decoration-none">RakeshSachdeva@gmail.com</a>
                    </li>
                </ul>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="bg-white p-4 rounded shadow-sm">
                    <form asp-controller="Contact" asp-action="Submit" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" name="FirstName" required />
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" name="LastName" required />
                            </div>
                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="Email" required />
                            </div>
                            <div class="col-12">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" name="Subject" />
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" name="Message" rows="4" required></textarea>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary px-4">Send Message</button>
                            </div>
                        </div>
                    </form>
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Success
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
