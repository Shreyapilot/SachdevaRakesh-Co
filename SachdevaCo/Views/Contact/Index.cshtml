@{
    ViewBag.Title = "Contact";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<style>
    .hero {
        background: linear-gradient(135deg, #0C1533, #4f46e5);
        color: white;
    }

    .text-navy {
        color: #474292 !important;
        fill: #474292 !important;
    }



</style>

<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="text-center mb-2">
            <h2 class="display-5 fw-bold mb-3">Contact Us</h2>
            <p class="fs-5 text-muted mx-auto" style="max-width: 700px;">
                Get in touch with our team of experts today.
            </p>
        </div>
        <div class="row g-5">
            <div class="col-12 col-lg-6">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h5 class="fw-bold mb-3"><i class="bi bi-envelope-fill me-2 text-navy"></i>Send us a Message</h5>
                    <p class="text-muted mb-4">
                        Have a question or want to work together? We'd love to hear from you.
                    </p>
                    <form asp-controller="Contact" asp-action="Submit" method="post">
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="First Name" name="FirstName" required />
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Last Name" name="LastName" required />
                            </div>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" placeholder="your.email@example.com" name="Email" required />
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="What's this about?" name="Subject" />
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" rows="4" placeholder="Tell us more about your inquiry..." name="Message" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary hero w-100">
                            <i class="bi bi-send me-2"></i> Send Message
                        </button>
                    </form>
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success mt-3">
                            @ViewBag.Success
                        </div>
                    }
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <h5 class="fw-bold mb-2">Get in Touch</h5>
                <p class="text-muted mb-4">
                    Ready to start your next project with us? Contact us through any of the following ways:
                </p>

                <div class="bg-white p-3 rounded shadow-sm mb-3">
                    <h6 class="fw-bold"><i class="bi bi-geo-alt-fill me-2 text-navy"></i>Our Address</h6>
                    <p class="mb-0 text-muted">TechCorp Solutions Ltd.123 Business Avenue, Suite 456 New York, NY 10001<br />United States</p>
                </div>

                <div class="bg-white p-3 rounded shadow-sm mb-3">
                    <h6 class="fw-bold"><i class="bi bi-telephone-fill me-2 text-navy "></i>Phone Number</h6>
                    <p class="mb-0 text-muted">+1 (555) 123-4567<br />Monday - Saturday: 9:00 AM - 6:00 PM EST</p>
                </div>

                <div class="bg-white p-3 rounded shadow-sm mb-3">
                    <h6 class="fw-bold"><i class="bi bi-envelope-fill me-2 text-navy"></i>Email Address</h6>
                    <p class="mb-0 text-muted">info@techcorp.com <br /> support@techcorp.com</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
